<div id="section3" style="padding-top: 100px; height: auto;">

    <div id="latestTracksHeader">Tracks</div>

    <div id="tracksContainer">

        <% @tracks.each do |track| %>
        <div style="opacity: 1; transform: none" class="track">
            <div class="trackImageContainer">
                <img class="trackImage" src="<%= url_for(track.cover_art)%>">
                <div class="trackCircle"></div>
                <i class="fas fa-play trackPlayIcon"></i>
            </div>
            <div class="trackInfoContainer">
                <div class="trackNameContainer">
                    <div class="trackName"><%= track.name %> </div>
                    <%= link_to 'Edit', edit_track_path(track) %>
                    <%= link_to 'Show', track %>
                    <%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>



                <div class="streamContainer">
                    <div class="logoContainer">
                        <a href="<%= track.spotify_url%>" target="_blank" ><i class="fab streamingLogo  fa-spotify"></i></a>
                    </div>
                    <div class="logoContainer">
                        <a href="<%= track.soundcloud_url%>" target="_blank" ><i class="fab streamingLogo  fa-soundcloud"></i></a>
                    </div>
                    <div class="logoContainer">
                        <i class="fab streamingLogo  fa-apple"></i>
                    </div>
                    <div class="logoContainer">
                        <a href="<%= track.youtube_url%>" target="_blank" ><i class="fab streamingLogo  fa-youtube"></i></a>
                    </div>

                </div>

            </div>
        </div>

        <% end %>



    </div>



</div>
